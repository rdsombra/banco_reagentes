<p id="notice"><%= notice %></p>
<div class="content">
  <h1>Reagentes</h1>
  <div class="row">
    <table class="col-sm-12">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Fórmula</th>
          <th>Quantidade</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @reagents.each do |reagent| %>
          <tr>
            <td><%= reagent.name %></td>
            <td><%= reagent.formula %></td>
            <td><%= link_to 'Mostrar', reagent, :class => 'btn btn-default btn-xs' %></td>
            <td><%= link_to 'Editar', edit_reagent_path(reagent), :class => 'btn btn-default btn-xs' %></td>
            <td><%= link_to 'Excluir', reagent, method: :delete,:class => 'btn btn-danger btn-xs', data: { confirm: 'Você tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  <%= link_to 'Adicionar novo', new_reagent_path %>
  </div>
</div>
